@model AllLibraryModels
@{

    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Cotalog</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width-device-width" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/Style.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

        <p class="text-center h1 fw-bold mb-5 mt-4">Sign up</p>
       
        <form method="post" action="/Registration/Regist">

            <div class="d-flex flex-row align-items-center mb-4">
                <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                <div class="form-outline flex-fill mb-0">
                    <input type="text" class="form-control" name="Login">
                    <label class="form-label" for="form3Example1c">Your Name</label>
                </div>
            </div>


            <div class="d-flex flex-row align-items-center mb-4">
                <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                <div class="form-outline flex-fill mb-0">
                    <input type="password" class="form-control" name="Password">
                    <label class="form-label" for="form3Example4c">Password</label>
                </div>
            </div>
            <div>
                <input type="radio" name="Admin" value="true" />
                <label for="contactChoice1">Admin</label>
                <input type="radio" name="Admin" value="false" />
                <label for="contactChoice1">User</label>
            </div>
            <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">


                <input type="submit" value="Enter" />
            </div>

        </form>
        <form method="post" action="/Registration/Return">
            <input type="submit" value="return" />
        </form>
    </div>
</body>
</html>
